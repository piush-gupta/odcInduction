<div class="col-lg-2">
	<% if current_user.avatar_file_name %>
		<%= image_tag current_user.avatar.url(:show), class: 'img-rounded image-show' %>
	<% else %>
		<span title="Upload image"><%= image_tag avatar_url(current_user), class: 'img-rounded' %>
		</span>
	<% end %>
	<div class="name">
		<%= current_user.name %>
	</div>
	<div class="detail-container">
		<div class="details">
			<span class="mentor glyphicon custom-glyphicon">Mentor:</span>
			<% unless current_user.mentors.empty? %>
				<span class="span-within-details" style="margin-bottom: -3px;"><%= current_user.mentors.first.name %></span>
			<% else %>
			<span class="span-within-details" style="margin-bottom: -3px;">No Mentor Tagged</span>
			<% end %>
		</div>
		<div class="clear"></div>
		<div class="details">
			<span>
				<span class="glyphicon glyphicon-envelope custom-glyphicon"></span>
			</span>
			<span class="span-within-details"><%= current_user.email %></span>
		</div>
		<div class="clear"></div>
		<div class="details">
			<span ><span class="glyphicon glyphicon-time custom-glyphicon"></span></span>
			<span class="span-within-details">Joined <%= time_ago_in_words(current_user.created_at) %> ago.</span>
		</div>
		<div class="clear"></div>
	</div>
	<div id="side-nav">
		<div class="navbar navbar-inverse" role="navigation">
		  <div class="navbar navbar-collapse collapse">
		    <ul class="nav">
		      <li>
		      	<%= link_to "Tasks", associate_path(:type => 'tasks'), :class => "do-not-reload" %>
		      </li>
		      <li>
		      	<%= link_to "Updates", associate_path(:type => 'updates'), :class => "do-not-reload" %>
		      </li>
		    </ul>
		  </div>
		</div>
	</div>
</div>